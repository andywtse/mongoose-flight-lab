<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

  <main>
    <h1><%= title.text %> </h1>
    <table>
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Details</th>
          <th>Flight #</th>
          <th>Departure Time</th>
          <th>Delete?</th>
        </tr>
      </thead>
      <tbody>
  
        <% flights.forEach(flight => { %>
          <tr>
            <td><%= flight.airline %></td>
            <td><%= flight.airport %></td>
            <td><a href="/flights/<%= flight._id %>"">Detail</a></td>
            <td><%= flight.flightNo %></td>
            <td><%= flight.departs.toISOString().slice(0, 10) %></td>
            <td>
              <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
                <button>X</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

<%- include("../partials/footer") %>