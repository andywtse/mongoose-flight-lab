<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css">
<%- include('../partials/nav') %>

  <main>
    <h1><%= title %></h1>
    <table>
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Details</th>
          <th>Flight #</th>
          <th>Departure Time</th>
          <th>Delete?</th>
        </tr>
      </thead>
      <tbody>
  
        <% flights.forEach(flight => { %>
          <tr class="row-flight <%= (flight.departs < currentDate) ? lateFlight : '' %>">
            <td><%= flight.airline %></td>
            <td><%= flight.airport %></td>
            <td><a href="/flights/<%= flight._id %>"">Detail</a></td>
            <td><%= flight.flightNo %></td>
            <td><%= flight.departs.toISOString().slice(0, 16) %></td>
            <td>
              <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
                <button>X</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

<%- include("../partials/footer") %>